# Configuración de la API
API_HOST=0.0.0.0          # Host donde se ejecuta la API
API_PORT=8000             # Puerto para la API
API_RELOAD=true           # Recargar automáticamente en desarrollo (true/false)

# Entorno y Depuración
DEBUG=true                # Modo depuración (true/false)
ENVIRONMENT=local         # Entorno (local/production)

# Configuración CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]  # Orígenes permitidos